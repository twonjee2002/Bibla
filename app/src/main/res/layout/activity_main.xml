<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context="com.dkreators.twonjee2002.bibla.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="The voice Bible!"
        android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear_main"
             android:layout_alignParentLeft="true"
            android:layout_marginTop="45dp"
            android:weightSum="1">

            <Button
                android:id="@+id/button_set_bible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="0.14"
                android:onClick="onSetBibleClick"
                android:text="@string/set_bible" />

            <Button
                android:id="@+id/button_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="0.14"
                android:onClick="onFeedback"
                android:text="@string/set_feedback" />
        </LinearLayout>


</RelativeLayout>